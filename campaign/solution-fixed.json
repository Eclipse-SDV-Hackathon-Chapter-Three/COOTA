{
    "metadata": {
        "name": "fleet-app-v-1",
        "namespace": "default"
    },
    "spec": {
        "displayName": "Fleet Management Solution",
        "rootResource": "fleet-app",
        "version": "1",
        "components": [
            {
                "name": "fleet-app",
                "type": "ankaios",
                "properties": {
                    "ankaios.runtime": "podman",
                    "ankaios.restartPolicy": "ALWAYS",
                    "ankaios.runtimeConfig": "image: alpine:latest\ncommandOptions: [\"-e\", \"VIN=VIN25555\"]\ncommand: [\"sh\", \"-c\", \"while true; do echo '[2025-10-01 22:12:00] Vehicle $VIN is running'; sleep 5; done\"]"
                }
            }
        ]
    }
}
